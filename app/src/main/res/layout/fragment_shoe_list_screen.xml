<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- constraint layout Layout for the scroll view and floating action button-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  scroll view -->
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".screens.showList.ShoeListScreen"
            tools:ignore="SpeakableTextPresentCheck">

            <!-- Linear Layout for the shoes list and every shoe added and it contains inside it the text views od the added shoe-->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

        <!--floating action button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toDetail"
            android:layout_width="81dp"
            android:layout_height="54dp"
            android:layout_marginStart="342dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="176dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"
            app:srcCompat="@drawable/ic_add"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>