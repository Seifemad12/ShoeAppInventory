<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="shoes"
            type="com.udacity.shoestore.models.Shoe" />
        <variable
            name="nav"
            type="com.udacity.shoestore.screens.details.DetailsScreen" />
        <variable
            name="ShoeListViewModel"
            type="com.udacity.shoestore.screens.showList.ShoeListViewModel" />
    </data>

    <!-- Constraints Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.details.DetailsScreen">


        <TextView
            android:id="@+id/shoename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Enter Shoe Name"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="164dp"
            android:text="Enter Shoe Company"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="Enter Shoe Size"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="404dp"
            android:text="Enter Shoe Description"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:text="@={shoes.name}"-->
        <EditText
            android:id="@+id/shoe_name"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginTop="84dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:onTextChanged="@{(text,start,before,count)->ShoeListViewModel.setShoeNameValue(text,start,before,count)}"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

<!--        android:text="@={shoes.size}"-->
        <EditText
            android:id="@+id/shoe_size"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginTop="320dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:onTextChanged="@{(text,start,before,count)->ShoeListViewModel.setShoeSizeValue(text,start,before,count)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

<!--        android:text="@={shoes.description}"-->
        <EditText
            android:id="@+id/shoe_description"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginTop="440dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="20dp"

            android:onTextChanged="@{(text,start,before,count)->ShoeListViewModel.setShoeDescValue(text,start,before,count)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

<!--        android:text="@={shoes.company}"-->
        <EditText
            android:id="@+id/shoe_company"
            android:layout_width="390dp"
            android:layout_height="47dp"
            android:layout_marginTop="212dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="20dp"

            android:onTextChanged="@{(text,start,before,count)->ShoeListViewModel.setShoeCompanyValue(text,start,before,count)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/save"
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="124dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Save"
            android:onClick="@{()->nav.navigateback()+ShoeListViewModel.addShoeEntry2()}"
            android:textColor="#FFFAFA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:layout_marginBottom="124dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Cancel"
            android:textColor="#FFFAFA"
            android:onClick="@{()->nav.navigateback()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toEndOf="@+id/save"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>